
<div class="banniere">
<h1><%= "List Details" %></h1>


 <% @bookmarks.each do |bookmark| %>
  <div class="card-product">

    <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" />

    <div class="card-product-infos">

      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.comment %></p>

    </div>
      <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "delete-button" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
  </div>
<% end %>

<%= link_to "Add New Movie", new_list_bookmark_path(@list), class: "add-new-btn" %>
<%= link_to "I'll be back", lists_path, class: "back-btn"  %>
</div>
