
<div class="banniere">
  <div class="navbar-home">
  <nav>
    <a class="nav-link" href="lists">Home <i class="fa-solid fa-house"></i></a>
    <a class="nav-link" href="#">Add Movie <i class="fa-solid fa-film"></i></a>
    <div class="navform">
        <%= simple_form_for :query, url: lists_search_path do |f| %>
       <%= f.input :name, label: false%>
        <%= f.button :submit, class:"btn-search"%>
         <% end %>
    </div>
  </nav>
</div>
    <div class="h1-container">
      <h1><%= "All List" %></h1>
    </div>

  <div class="card-container">
    <div class="cards">

      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
            url('<%= cl_image_path list.photo.key%>')" >
            <%= link_to "#{list.name}", list_path(list), class: "btn-lists"  %>
            <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "delete-button-list" do %>
            <i class="fa-solid fa-crosshairs"></i>
            <% end %>
          </div>
            <% end %>

    </div>
  </div>
    <div class="btn-container">
      <%= link_to "create a new list", new_list_path, class: "btn-newlist"  %>
    </div>
</div>
